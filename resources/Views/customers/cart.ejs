<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="Img/cart-black.png" alt="cart-black">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <% for(let pizza of Object.values(session.cart.items)) {%>
        <div class="pizza-list my-8">
            <div class="flex items-center">
                <img class="w-24" src="/Img/<%= pizza.item.image %>" alt="pizza">
                <div class="flex-1  ml-4">
                    <h1><%= pizza.item.name%></h1>
                    <span><%= pizza.item.size%></span>
                </div>
                <span class="flex-1"> <%= pizza.qty %> pic</span>
                <span class="font-bold text-lg">‚Çπ <%= pizza.item.price * pizza.qty%></span>
            </div>
        </div>
        <% } %>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount: </span>
                <span class="amount text-2xl font-bold ml-2">‚Çπ <%= session.cart.totalPrice%></span>
            </div>
            <% if(user) {%>
            <div>
                <form action="/orders" method="POST" class="mt-10">
                    <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number">
                    <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">
                            Order Now
                        </button>
                    </div>
                    <% } else {%>
                </form>
                <a href="/login" class="inline-block cursor-pointer btn-primary px-6 
                py-2 rounded-full text-white font-bold mt-6">Login To Continue</a>
                <% } %>
            </div>
        </div>
    </div>
    <% } else { %>
        <!-- Empty card -->
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty üòè</h1>
            <p class="text-gray-500 text-lg mb-12">you probably haven't ordered a pizza yet.<br>
                To order a pizza, go to the main page.
            </p>
            <img class="w-2/5 mx-auto " src="/Img/empty-cart.png" alt="empty-cart">
            <a href="" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
        </div>
    </div>
    <% } %>
</section>